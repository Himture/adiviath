---
// Coming Soon Page for Adiviath
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Adiviath - Coming Soon" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Adiviath - Coming Soon</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#0f0f1a] text-white min-h-screen overflow-x-hidden leading-relaxed font-sans">
    <div class="min-h-screen flex flex-col relative">
      <!-- Background Shapes -->
      <div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
        <div class="absolute rounded-full blur-[80px] opacity-50 animate-float w-[600px] h-[600px] bg-gradient-to-br from-primary-500 to-accent-400 -top-[200px] -right-[200px]"></div>
        <div class="absolute rounded-full blur-[80px] opacity-50 animate-float w-[400px] h-[400px] bg-gradient-to-br from-accent-400 to-primary-400 -bottom-[100px] -left-[100px]" style="animation-delay: -7s;"></div>
        <div class="absolute rounded-full blur-[80px] opacity-50 animate-float w-[300px] h-[300px] bg-gradient-to-br from-primary-400 to-primary-500 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" style="animation-delay: -14s;"></div>
      </div>
      
      <!-- Main Content -->
      <main class="flex-1 flex flex-col items-center justify-center p-8 relative z-10 text-center">
        <!-- Logo -->
        <div class="mb-8">
          <span class="font-display text-5xl md:text-6xl font-bold bg-gradient-to-br from-white via-primary-400 to-accent-400 bg-clip-text text-transparent tracking-wide">
            Adiviath
          </span>
        </div>
        
        <!-- Title -->
        <h1 class="font-display text-5xl md:text-7xl lg:text-8xl font-semibold mb-6 tracking-wide animate-fade-in-up">
          Coming Soon
        </h1>
        
        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-white/60 max-w-lg mb-12 animate-fade-in-up [animation-delay:0.2s]">
          We're crafting something extraordinary. Be the first to experience it.
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4 animate-fade-in-up [animation-delay:0.4s]">
          <a href="https://twitter.com/adiviath" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-white/5 border border-white/10 rounded-xl text-white/60 transition-all backdrop-blur-lg hover:text-white hover:border-primary-500 hover:-translate-y-1 hover:shadow-[0_8px_25px_rgba(99,102,241,0.3)]" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="https://linkedin.com/company/adiviath" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-white/5 border border-white/10 rounded-xl text-white/60 transition-all backdrop-blur-lg hover:text-white hover:border-primary-500 hover:-translate-y-1 hover:shadow-[0_8px_25px_rgba(99,102,241,0.3)]" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href="https://instagram.com/adiviath" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-white/5 border border-white/10 rounded-xl text-white/60 transition-all backdrop-blur-lg hover:text-white hover:border-primary-500 hover:-translate-y-1 hover:shadow-[0_8px_25px_rgba(99,102,241,0.3)]" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://github.com/adiviath" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-white/5 border border-white/10 rounded-xl text-white/60 transition-all backdrop-blur-lg hover:text-white hover:border-primary-500 hover:-translate-y-1 hover:shadow-[0_8px_25px_rgba(99,102,241,0.3)]" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        </div>
      </main>
      
      <!-- Footer -->
      <footer class="py-8 text-center text-white/60 text-sm relative z-10">
        <p>&copy; 2026 Adiviath. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>
